<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group2.cineme.sem2.FXMLBillManagerController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Text fill="#48a13a" strokeType="OUTSIDE" strokeWidth="0.0" text="BILL MANAGER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_LEFT" prefHeight="33.0" prefWidth="600.0">
         <children>
            <ComboBox fx:id="comboBoxDate" prefHeight="25.0" prefWidth="115.0" promptText="Print Date" />
            <ComboBox fx:id="comboBoxDateTime" prefHeight="25.0" prefWidth="122.0" promptText="Schedule Date" />
            <TextField fx:id="txtFilm" prefHeight="25.0" prefWidth="183.0" promptText="Enter Film Or Phone's Customer" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#undoButtonHandler" prefHeight="25.0" prefWidth="27.0">
               <graphic>
                  <FontAwesomeIcon glyphName="UNDO" />
               </graphic>
            </Button>
         </children></HBox>
      <TableView fx:id="tableViewBill" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
